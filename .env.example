# ============================================================
# PickLT Environment Variables
# Copy this file to .env.local and fill in your keys
# ============================================================

# ─── Clerk Authentication ────────────────────────────────────
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk redirect URLs (optional — defaults work for most setups)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ─── Appwrite ────────────────────────────────────────────────
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=698fcc80001f0b5149d8
APPWRITE_API_KEY=your_appwrite_api_key

# ─── Google Maps ─────────────────────────────────────────────
NEXT_PUBLIC_GOOGLE_MAP_API_KEY=your_google_map_api_key
NEXT_PUBLIC_GOOGLE_MAP_ID=your_google_map_id

# ─── Mapbox ──────────────────────────────────────────────────
MAPBOX_SECRET_KEY=your_mapbox_secret_key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_public_token
